--conta quantas ocorrências do buffer existem na tabela administracao.buffers_texto
--geralmente utilizada para buffers de pilha
create or replace function countBufferTexto(varchar) returns integer
as $$
declare
    stBufferPar alias for $1;
    stSql       varchar;
    stBuffer    varchar;
begin
    stBuffer := processarNomeBuffer(stBufferPar);
    stSql := 'select count(1) from administracao.buffers_texto where buffer ilike '''||stBuffer||'%''';
    return selectIntoInteger(stSql);
end;
$$ language 'plpgsql';
