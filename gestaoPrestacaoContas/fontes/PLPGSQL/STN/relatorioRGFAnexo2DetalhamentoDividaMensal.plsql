      INSERT INTO tmp_valores VALUES (arDescricao[7],7,0,0);
  END IF;

  IF arBoFiltroVazio[8] THEN
      INSERT INTO tmp_valores VALUES (arDescricao[8],8,0,0);
  END IF;

  IF arBoFiltroVazio[9] THEN
